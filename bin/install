#!/usr/bin/env bash

set -e
set -o pipefail
# set -x

ASDF_INSTALL_TYPE=${ASDF_INSTALL_TYPE:-version}
[ -n "$ASDF_INSTALL_VERSION" ] || (>&2 echo 'Missing ASDF_INSTALL_VERSION' && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (>&2 echo 'Missing ASDF_INSTALL_PATH' && exit 1)

install_plugin() {
  local install_type=$1
  local version=$2
  local install_path=$3
  local download_url="$(get_download_url $install_type $version)"
  local tmp_download_file=$(mktemp)

  echo "Downloading tsuru from $download_url"
  curl -L -s "$download_url" -o "$tmp_download_file"
  pushd $install_path > /dev/null
  tar zxf "$tmp_download_file" || exit 1
  mkdir bin
  mv tsuru bin/tsuru
  popd > /dev/null
}

get_platform() {
  [ "Linux" = "$(uname)" ] && echo "linux" || echo "macOS"
}

get_arch() {
  local arch=$(uname -m)
  case $arch in
    amd64 | x86_64)
      echo "amd64"
      ;;
    arm64)
      echo "arm64"
      ;;
    *)
      echo ""
  esac
}

get_download_url() {
  local install_type=$1
  local version=$2

  local platform=$(get_platform)
  local arch=$(get_arch)

  echo "https://github.com/tsuru/tsuru-client/releases/download/${version}/tsuru_${version}_${platform}_${arch}.tar.gz"
}

install_plugin "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
